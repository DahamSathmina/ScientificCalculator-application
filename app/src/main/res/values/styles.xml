<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryVariant">@color/ios_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ios_orange</item>
        <item name="colorSecondaryVariant">@color/ios_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_light</item>
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryVariant">@color/ios_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ios_orange</item>
        <item name="colorSecondaryVariant">@color/ios_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Button Styles -->
    
    <!-- Number Button Style -->
    <style name="NumberButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/number_button_background</item>
        <item name="android:textColor">@color/number_button_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/button_ripple</item>
    </style>

    <!-- Operator Button Style -->
    <style name="OperatorButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/ios_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/operator_button_ripple</item>
    </style>

    <!-- Function Button Style (AC, Â±, %) -->
    <style name="FunctionButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/function_button_background</item>
        <item name="android:textColor">@color/function_button_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/function_button_ripple</item>
    </style>

    <!-- Memory Button Style -->
    <style name="MemoryButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/memory_button_background</item>
        <item name="android:textColor">@color/memory_button_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/memory_button_ripple</item>
    </style>

</resources>