{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug APK",
            "type": "shell",
            "command": "./gradlew",
            "args": ["assembleDebug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install APK",
            "type": "shell",
            "command": "adb",
            "args": ["install", "-r", "app/build/outputs/apk/debug/app-debug.apk"],
            "group": "build"
        },
        {
            "label": "Start App",
            "type": "shell",
            "command": "adb",
            "args": ["shell", "am", "start", "-n", "com.example.procalc/.MainActivity"],
            "group": "build"
        }
    ]
}